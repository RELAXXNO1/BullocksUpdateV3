{
  "rules": {
    "products": {
      ".read": true,  // Anyone can read products
      ".write": "auth != null && auth.token.admin === true"  // Only admin users can write
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || auth.token.admin === true",
        ".write": "$uid === auth.uid || auth.token.admin === true"
      }
    },
    "storage": {
      "products": {
        ".read": true,  // Anyone can view product images
        ".write": "auth != null && auth.token.admin === true"  // Only admin users can upload
      }
    }
  }
}